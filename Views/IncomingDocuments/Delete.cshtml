@model Models.Domain.IncomingDocument

@{
    ViewData["Title"] = "Удаление документа";
}

<h1>Удаление документа</h1>

<h4>Вы действительно хотите удалить этот документ?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Номер</dt>
        <dd class="col-sm-10">@Model.Number</dd>

        <dt class="col-sm-2">Дата</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Содержимое</dt>
        <dd class="col-sm-10">
            @if (Model.IncomingResources.Any())
            {
                <ul>
                    @foreach (var r in Model.IncomingResources)
                    {
                        <li>@r.Resource.Name - @r.Quantity @r.UnitOfMeasurement.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>(пустой)</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
